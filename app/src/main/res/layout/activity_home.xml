<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebuttonAddBooking"
        android:src="@drawable/ic_addbooking"
        android:text="@string/Add_BookingLable"
        android:nestedScrollingEnabled="false"
        android:maxHeight="80dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebuttonbookingHistroy"
        android:src="@drawable/ic_bookinghistory"
        android:text="@string/Add_User"
        android:clickable="true"
        android:layout_toRightOf="@id/imagebuttonAddBooking"
        android:nestedScrollingEnabled="false"
        android:maxHeight="80dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebuttontaxi"
        android:src="@drawable/ic_taxi"
        android:text="@string/Add_User"
        android:layout_toRightOf="@id/imagebuttonbookingHistroy"
        android:nestedScrollingEnabled="false"
        android:maxHeight="80dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_driver"
        android:id="@+id/imagebuttondriver"
        android:text="@string/Add_User"
        android:layout_toRightOf="@id/imagebuttontaxi"
        android:nestedScrollingEnabled="false"
        android:maxHeight="80dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAddUser"
        android:src="@drawable/ic_addusermale"
        android:text="@string/Add_User"
        android:layout_below="@id/imagebuttonAddBooking"
        android:nestedScrollingEnabled="false"
        android:maxHeight="80dp"
        android:scaleType="fitXY" />

</RelativeLayout>
