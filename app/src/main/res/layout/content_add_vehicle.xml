<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddVehicleActivity"
    android:background="@drawable/global_home_bg_new_2"
    android:scrollbars="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:id="@+id/textViewAddCabLable"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/ButtonHomeVA"
        android:layout_alignParentRight="@+id/textViewAddCabLable"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_home_icon"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cab Number"
        android:id="@+id/CabNumber"
        android:layout_below="@+id/textViewAddCabLable"
      />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Cab Description"
        android:id="@+id/CabDescription"
        android:layout_below="@+id/CabNumber"
       />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint="Vehicle Model"
        android:id="@+id/VehicleModel"
        android:layout_below="@+id/CabDescription"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cab Availability"
        android:id="@+id/switchCabAvailability"
        android:layout_below="@+id/VehicleModel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLVehicleButton"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonVehiclecancel"
        android:text="Cancel"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_bg_1"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonSaveVehicle"
        android:text="Create New"
        android:layout_alignRight="@+id/ButtonVehiclecancel"
        android:background="@drawable/green_bg_1"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />
    </LinearLayout>


</RelativeLayout>
