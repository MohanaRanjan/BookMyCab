<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/global_home_bg_new_2"
    tools:context=".AddUserActivity"
    android:id="@+id/dd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HeadingAddUser"
        android:hint="Add User"
        android:textColorHint="@color/textHighlight"
        android:text="Enter User Details"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp" />


    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/ButtonHomeUA"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_home_icon"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:text=""
        android:id="@+id/Name"
        android:textColorHint="@color/textHighlight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/textHighlight"
        android:ems="10"
        android:text=""
        android:id="@+id/Email"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:layout_below="@+id/Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:text=""
        android:id="@+id/phone"
        android:layout_alignParentStart="true"
        android:hint="Phone"
        android:textColorHint="@color/textHighlight"
        android:layout_below="@+id/Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:text=""
        android:id="@+id/userpassword"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:textColorHint="@color/textHighlight"
        android:layout_below="@+id/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/userpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroupRoles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add_User_Admin"
            android:id="@+id/radioButtonAdmin"
            android:checked="false"
            android:paddingBottom="5dp"
          />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add_User_HOI"
            android:id="@+id/radioButtonHOI"
            android:checked="false"
            android:paddingBottom="5dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add_User_Driver"
            android:id="@+id/radioButtonDriver"
            android:checked="false"
            android:paddingBottom="5dp"
          />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add_User_BookingRequester"
            android:id="@+id/radioButtonBookingRequester"
            android:checked="false"
            android:paddingBottom="5dp"
            />

    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCancel"
        android:layout_margin="10dp"
        android:background="@drawable/red_bg_1"
        android:layout_alignParentBottom="true"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonCancel"
        android:background="@drawable/green_bg_1"
        />

</RelativeLayout>
